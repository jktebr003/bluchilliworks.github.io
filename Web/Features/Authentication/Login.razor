@page "/authentication/login"

@using System.ComponentModel.DataAnnotations
@using Web.Shared


<h3>Login</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

<EditForm Model="loginModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <InputText id="username" class="form-control" @bind-Value="loginModel.Username" />
        <ValidationMessage For="@(() => loginModel.Username)" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" />
        <ValidationMessage For="@(() => loginModel.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

<ProgressSpinner IsBusy="_busy" />

@code {
    [Inject] NavigationManager NavigationManager { get; set; }

    [Inject] IAuthenticationService AuthService { get; set; }

    [Inject] WebApiClient ApiClient { get; set; }

    private LoginModel loginModel = new();
    private bool _busy = false;
    private string? ErrorMessage;

    private async Task HandleLogin()
    {
        // Show the overlay to indicate a busy state
        await ToggleOverlay(true);

        // TODO: Replace with actual authentication logic
        var loginResult = await AuthService.LoginAsync(loginModel.Username, loginModel.Password);
        //if (loginModel.Username == "admin" && loginModel.Password == "password")
        if (loginResult.Succeeded)
        {
            // Redirect or set authentication state
            ErrorMessage = null;
            // Example: NavigationManager.NavigateTo("/");
            NavigationManager.NavigateTo("/");
        }
        else
        {
            ErrorMessage = loginResult.ErrorMessage;
        }

        // Hide the overlay to indicate a busy state
        await ToggleOverlay(false);
    }

    // Method to toggle the overlay visibility
    private async Task ToggleOverlay(bool value)
    {
        _busy = value;

        // Update the UI state
        StateHasChanged();
        await Task.Delay(1);  // allow the GUI to catch up
    }

    public class LoginModel
    {
        [Required]
        public string Username { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }
}
