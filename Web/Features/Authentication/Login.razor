@page "/authentication/login"

@using System.ComponentModel.DataAnnotations
@using Web.Shared

<div class="login-center-wrapper">
    <div class="login-card shadow-lg p-4 rounded">
        <div class="text-center mb-4">
            <img src="img/bluchilliworks-logo.png" alt="BluChilliWorks Logo" class="login-logo mb-2" />
            <h2 class="login-title">Sign in to your account</h2>
            <p class="login-subtitle">Welcome back! Please enter your details.</p>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger">@ErrorMessage</div>
        }

        <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <InputText id="username" class="form-control login-input" @bind-Value="loginModel.Username" placeholder="Enter your username" />
                <ValidationMessage For="@(() => loginModel.Username)" />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <InputText id="password" type="password" class="form-control login-input" @bind-Value="loginModel.Password" placeholder="Enter your password" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="/authentication/forgot-password" class="login-link">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100 login-btn">
                @if (_busy)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </button>
        </EditForm>

        <div class="text-center mt-4">
            <span>Don't have an account?</span>
            <a href="/authentication/register" class="login-link ms-1">Sign up</a>
        </div>
    </div>
</div>

<ProgressSpinner IsBusy="_busy" />

@code {
    [Inject] NavigationManager NavigationManager { get; set; }
    [Inject] IAuthenticationService AuthService { get; set; }
    [Inject] WebApiClient ApiClient { get; set; }

    private LoginModel loginModel = new();
    private bool _busy = false;
    private string? ErrorMessage;

    private async Task HandleLogin()
    {
        await ToggleOverlay(true);

        var loginResult = await AuthService.LoginAsync(loginModel.Username, loginModel.Password);
        if (loginResult.Succeeded)
        {
            ErrorMessage = null;
            NavigationManager.NavigateTo("/", true);
        }
        else
        {
            ErrorMessage = loginResult.ErrorMessage;
        }

        await ToggleOverlay(false);
    }

    private async Task ToggleOverlay(bool value)
    {
        _busy = value;
        StateHasChanged();
        await Task.Delay(1);
    }

    public class LoginModel
    {
        [Required]
        public string Username { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }
}